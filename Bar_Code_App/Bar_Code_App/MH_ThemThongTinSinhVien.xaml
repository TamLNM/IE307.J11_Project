<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Bar_Code_App.MH_ThemThongTinSinhVien">
    <StackLayout VerticalOptions="Center"
                 HorizontalOptions="Center">
        <Label Text="THÊM THÔNG TIN SINH VIÊN"/>

        <Entry Placeholder="MSSV"/>

        <Entry Placeholder="Nhập họ tên sinh viên"/>

        <Entry Placeholder="Nhập lớp"/>

        <StackLayout
            Orientation="Horizontal"
            HorizontalOptions="Center">
            
            <Label
            x:Name="lbl_MaBarcode"
            Text="Mã barcode: "/>

            <Button Text="Phát sinh"></Button>
            
        </StackLayout>
       
        <Button
            x:Name="btnScanDefault"
            Text="THÊM"/>
    </StackLayout>
</ContentPage>